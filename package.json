{
  "name": "@yr/date",
  "description": "Efficient, immutable, utility for working with time/dates",
  "version": "2.4.4",
  "author": "Alexander Pope <alexander.pope@nrk.no>",
  "dependencies": {
    "is-plain-obj": "1.1.x"
  },
  "devDependencies": {
    "buddy": "4.x.x",
    "buddy-plugin-babel": "6.x.x",
    "expect.js": "*",
    "mocha": "*",
    "mocha-phantomjs": "*"
  },
  "main": "src/index.js",
  "repository": "https://github.com/YR/date.git",
  "license": "MIT",
  "scripts": {
    "prepublish": "buddy build",
    "test": "NODE_ENV=test mocha test/lib-test.js --reporter spec",
    "test-client": "buddy build && mocha-phantomjs test/test-runner.html"
  },
  "browser": "index.js",
  "buddy": {
    "build": {
      "targets": [
        {
          "input": "src/index.js",
          "output": ".",
          "modular": false
        },
        {
          "input": "test/src.js",
          "output": "test/lib.js",
          "boilerplate": true,
          "bootstrap": true
        }
      ]
    }
  }
}
